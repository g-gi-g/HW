<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumInputMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                x:Name="Label"
                Text="Введіть будь-яке ціле число"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="16"
                HorizontalOptions="Center" />

            <Entry 
                x:Name="Entry"
                Placeholder="" 
                HorizontalOptions="Center" />

            <Button
                x:Name="ReadBtn"
                Text="Read"
                SemanticProperties.Hint="Зчитати число та вивести у поле"
                Clicked="OnBtnClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
