<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_6._5.AddFoodPage"
             Title="Додати їжу">
    <VerticalStackLayout>
        <Label Text="Ціна" />

        <Entry Placeholder="" 
               x:Name = "PriceEntry"/>

        <Label Text="Країна походження" />

        <Entry Placeholder="" 
               x:Name = "OriginEntry"/>

        <Label Text="Назва" />

        <Entry Placeholder="" 
               x:Name = "NameEntry"/>

        <Label Text="Дата пакування" />

        <Entry Placeholder="" 
               x:Name = "PackingEntry"/>

        <Label Text="Опис" />

        <Entry Placeholder="" 
               x:Name = "DescriptionEntry"/>

        <Label Text="Строк придатності" />

        <Entry Placeholder="" 
               x:Name = "ExpireEntry"/>

        <Label Text="Кількість" />

        <Entry Placeholder="" 
               x:Name = "AmountEntry"/>

        <Label Text="Одиниця виміру" />

        <Entry Placeholder="" 
               x:Name = "UnitEntry"/>
        
        <Button Text="Додати" 
                Clicked="AddFood"/>
        
    </VerticalStackLayout>
</ContentPage>